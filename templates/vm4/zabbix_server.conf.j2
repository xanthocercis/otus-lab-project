# Основные параметры Zabbix Server
ListenPort=10051
LogFile=/var/log/zabbix/zabbix_server.log
LogFileSize=50
DebugLevel=3
PidFile=/var/run/zabbix/zabbix_server.pid
SocketDir=/var/run/zabbix

# Параметры базы данных
DBHost=localhost
DBName=zabbix
DBUser=zabbix
DBPassword=zabbix_password
DBPort=3306

# Время ожидания
Timeout=4

# Параметры кэша
CacheSize=256M
HistoryCacheSize=128M
HistoryIndexCacheSize=64M

# Параметры обработчика значений
StartPollers=5
StartPollersUnreachable=1
StartTrappers=5
StartPingers=1
StartDiscoverers=1
StartHTTPPollers=1

# Параметры SSH
SSHKeyLocation=/var/lib/zabbix/ssh_keys

# Параметры Housekeeper
HousekeepingFrequency=1
MaxHousekeeperDelete=5000

# Параметры встроенного веб-интерфейса
ListenIP=0.0.0.0